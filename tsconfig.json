{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "packages/apps/types"
    ],
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./packages",
    "skipDefaultLibCheck": true
  },
  "exclude": [
    "build/**/*",
    "**/build/**/*",
    "scripts/*"
  ],
  "include": [
    "src"
  ]
}
