{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "typeRoots": ["types/global.d.ts", "node_modules/@types"],
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES6",
    "lib": ["WebWorker", "dom.iterable", "dom", "esnext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@tangle-network/abstract-api-provider": [
        "libs/abstract-api-provider/src/index.ts"
      ],
      "@tangle-network/abstract-api-provider/*": [
        "libs/abstract-api-provider/src/*"
      ],
      "@tangle-network/api-provider-environment": [
        "libs/api-provider-environment/src/index.ts"
      ],
      "@tangle-network/api-provider-environment/*": [
        "libs/api-provider-environment/src/*"
      ],
      "@tangle-network/browser-utils": ["libs/browser-utils/src/index.ts"],
      "@tangle-network/browser-utils/*": ["libs/browser-utils/src/*"],
      "@tangle-network/dapp-config": ["libs/dapp-config/src/index.ts"],
      "@tangle-network/dapp-config/*": ["libs/dapp-config/src/*"],
      "@tangle-network/dapp-types": ["libs/dapp-types/src/index.ts"],
      "@tangle-network/dapp-types/*": ["libs/dapp-types/src/*"],
      "@tangle-network/icons": ["libs/icons/src/index.ts"],
      "@tangle-network/icons/*": ["libs/icons/src/*"],
      "@tangle-network/polkadot-api-provider": [
        "libs/polkadot-api-provider/src/index.ts"
      ],
      "@tangle-network/polkadot-api-provider/*": [
        "libs/polkadot-api-provider/src/*"
      ],
      "@tangle-network/react-components": [
        "libs/react-components/src/index.ts"
      ],
      "@tangle-network/react-components/*": ["libs/react-components/src/*"],
      "@tangle-network/solana-api-provider": [
        "libs/solana-api-provider/src/index.ts"
      ],
      "@tangle-network/tailwind-preset": ["libs/tailwind-preset/index.js"],
      "@tangle-network/tangle-shared-ui": [
        "libs/tangle-shared-ui/src/index.ts"
      ],
      "@tangle-network/tangle-shared-ui/*": ["libs/tangle-shared-ui/src/*"],
      "@tangle-network/ui-components": ["libs/ui-components/src/index.ts"],
      "@tangle-network/ui-components/*": ["libs/ui-components/src/*"],
      "@tangle-network/web3-api-provider": [
        "libs/web3-api-provider/src/index.ts"
      ],
      "@tangle-network/web3-api-provider/*": ["libs/web3-api-provider/src/*"]
    }
  },
  "include": ["./types/global.d.ts"],
  "exclude": ["node_modules", "tmp", "**/node_modules/*"]
}
