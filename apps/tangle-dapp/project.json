{
  "name": "tangle-dapp",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/tangle-dapp/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project tangle-dapp --web",
  "targets": {
    "build": {
      "dependsOn": [
        "codegen",
        { "dependencies": true, "target": "build" },
        "typecheck"
      ]
    },
    "serve": {
      "dependsOn": ["codegen"]
    },
    "test": {
      "dependsOn": ["codegen"]
    },
    "lint": {
      "dependsOn": ["codegen"]
    },
    "codegen": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn check:codegen"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p apps/tangle-dapp/tsconfig.app.json"
      }
    }
  }
}
