{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "../../dist/libs/webb-ui-components",
    "declarationDir": "../../dist/libs/webb-ui-components",
    "declaration": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "module": "esnext"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ]
}
