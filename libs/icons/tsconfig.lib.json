{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "node",
      "../../node_modules/@nx/react/typings/cssmodule.d.ts",
      "../../node_modules/@nx/react/typings/image.d.ts",
      "../../node_modules/vite/client",
      "../../node_modules/vitest/importMeta"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../types/**/*.d.ts"
  ],
  "exclude": [
    "**/vite.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.stories.js",
    "**/*.stories.jsx"
  ]
}
