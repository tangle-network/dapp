{
  "name": "webb-dapp",
  "version": "0.2.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=12.x",
    "yarn": "1.x"
  },
  "resolutions": {
    "@polkadot/api": "^3.4",
    "@webb-tools/api": "^0.1.2-20",
    "@webb-tools/types": "^0.1.2-20",
    "@webb-tools/app-util": "^0.1.2-20",
    "@webb-tools/sdk-core": "^0.1.2-20"
  },
  "scripts": {
    "bump-version": "node scripts/bump-version.js",
    "start:dapp": "yarn run build:i18n && cd packages/apps && react-app-rewired start",
    "build:dapp": "cd packages/apps && react-app-rewired build",
    "start:dashboard": "cd packages/dashboard && react-app-rewired start",
    "build:dashboard": "cd packages/dashboard && react-app-rewired build",
    "build:i18n": "cross-env APP_NAME='dapp' node scripts/buildI18n.js",
    "release:ghpages": "gh-pages -d packages/apps/build",
    "analyze": "source-map-explorer 'packages/apps/build/static/js/*.js'",
    "test": "polkadot-dev-run-test",
    "lint": "polkadot-dev-run-lint",
    "format": "prettier --write \"packages/**/*.{ts,js,jsx,tsx}\""
  },
  "dependencies": {
    "gh-pages": "^3.1.0",
    "history": "^5.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@hot-loader/react-dom": "^16",
    "@polkadot/dev": "^0.61.24",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/enzyme": "^3.10.5",
    "@types/lodash": "^4.14.157",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.4",
    "eslint-plugin-standard": "^4.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest-css-modules": "^2.1.0",
    "prettier": "^2.2.1",
    "react-app-rewire-hot-loader": "^2.0.1",
    "react-app-rewired": "^2.1.8",
    "react-hot-loader": "^4.13.0",
    "react-scripts": "^3.4.1",
    "source-map-explorer": "^2.4.2",
    "typescript": "^3.8.3"
  }
}
