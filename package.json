{
  "name": "webb-dapp",
  "version": "0.2.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=12.7.x",
    "yarn": "1.x"
  },
  "resolutions": {
    "@polkadot/api": "^3.4",
    "@webb-tools/api": "^0.1.2-61",
    "@webb-tools/types": "^0.1.2-61",
    "@webb-tools/app-util": "^0.1.2-61",
    "@webb-tools/sdk-core": "^0.1.2-61",
    "@webb-tools/sdk-mixer": "^0.1.2-61"
  },
  "scripts": {
    "bump-version": "node scripts/bump-version.js",
    "start:dapp": "yarn run build:i18n && cd packages/apps && react-app-rewired start",
    "build:dapp": "cd packages/apps && react-app-rewired build",
    "start:dashboard": "cd packages/dashboard && react-app-rewired start",
    "build:dashboard": "cd packages/dashboard && react-app-rewired build",
    "build:i18n": "cross-env APP_NAME='dapp' node scripts/buildI18n.js",
    "release:ghpages": "gh-pages -d packages/apps/build",
    "analyze": "source-map-explorer 'packages/apps/build/static/js/*.js'",
    "test": "./scripts/run-tests.js",
    "lint": "polkadot-dev-run-lint",
    "ts-check": "tsc --noEmit -p ./tsconfig.json",
    "format": "prettier --write \"packages/**/*.{ts,js,jsx,tsx}\""
  },
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@walletconnect/client": "^1.4.1",
    "@walletconnect/qrcode-modal": "^1.4.1",
    "gh-pages": "^3.1.0",
    "history": "^5.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "tinycolor2": "^1.4.2"
  },
  "devDependencies": {
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@hot-loader/react-dom": "^16",
    "@open-web3/dev-config": "^0.1.13",
    "@polkadot/dev": "^0.61.24",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/enzyme": "^3.10.5",
    "@types/lodash": "^4.14.157",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/tinycolor2": "^1.4.2",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "babel-plugin-bundled-import-meta": "^0.3.2",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-prettier-react": "^0.0.24",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.4",
    "eslint-plugin-standard": "^4.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "24.9.0",
    "jest-config": "^26.6.3",
    "jest-css-modules": "^2.1.0",
    "prettier": "^2.2.1",
    "react-app-rewire-hot-loader": "^2.0.1",
    "react-app-rewired": "^2.1.8",
    "react-hot-loader": "^4.13.0",
    "react-scripts": "^3.4.1",
    "source-map-explorer": "^2.4.2",
    "ts-jest": "^24.3.0",
    "typescript": "^3.8.3",
    "wasm-loader": "^1.3.0",
    "worker-loader": "^3.0.7"
  }
}
